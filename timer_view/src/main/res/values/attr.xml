<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TimerTextView">
        <attr name="expiry_message" format="string" />

        <attr name="time_pattern">
            <flag name="D_HH_MM_SS" value="0" />
            <flag name="d_hh_mm_ss" value="1" />
            <flag name="HH_MM_SS" value="2" />
        </attr>

        <attr name="days_pattern">
            <flag name="days_time" value="0" />
            <flag name="only_days" value="1" />
        </attr>

        <attr name="countDownSeconds" format="integer" />

        <attr name="countDownTextColor" format="color" />
        <attr name="expiryMesgTextColor" format="color" />
        <attr name="hideWhenExpired" format="boolean" />

    </declare-styleable>
</resources>